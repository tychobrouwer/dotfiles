<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc">

  <theme>

    <!-- Font settings for various UI elements -->
    <font place="ActiveWindow">
      <name>Sans</name>
      <size>14</size>
      <weight>Bold</weight>
    </font>
    <font place="InactiveWindow">
      <name>Sans</name>
      <size>14</size>
    </font>
    <font place="MenuHeader">
      <name>Sans</name>
      <size>13</size>
      <weight>Bold</weight>
    </font>
    <font place="MenuItem">
      <name>Sans</name>
      <size>13</size>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>Sans</name>
      <size>12</size>
      <weight>Bold</weight>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Sans</name>
      <size>12</size>
    </font>
  </theme>

</openbox_config>
