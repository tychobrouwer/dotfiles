alias xssh='env TERM=xterm-256color ssh'

alias sudo='sudo -E'

alias vpn='switch_vpn'
alias home='switch_vpn home'
alias ams='switch_vpn mullvad-ams'
alias nyc='switch_vpn mullvad-nyc'
