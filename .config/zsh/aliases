# Aliases
alias la='ls -lAh --color=always --group-directories-first'
alias ls='ls -Ah --color=always --group-directories-first'
alias l='ls'
alias cp='cp -i' 
alias mv='mv -i'
alias rm='rm -i'
alias mkdir='mkdir -p'
alias ..='cd ..'

alias c='clear'

alias neofetch_tiny='neofetch --disable term cpu gpu --ascii_distro ArcoLinux_small --color_blocks off'
alias fastfetch='fastfetch -c ~/.config/fastfetch/config.jsonc'
alias fastfetch_tiny='fastfetch --logo arch_small --structure break:title:os:host:kernel:uptime:packages:memory:break --title-key "title   " --os-key "os      " --host-key "host    " --kernel-key "kernel  " --uptime-key "uptime  " --packages-key "packages" --memory-key "memory  "'

alias clear='clear && fastfetch_tiny'

alias tree='tree -CAhF -L 3 --dirsfirst'
alias treed='tree -CAFd -L 3'

alias pacman='sudo pacman'
alias pacman-autoremove='sudo pacman -Rns $(pacman -Qtdq) && paru -cc --noconfirm'

alias htop=btop
alias top=btop

alias vim=nvim
alias vi=nvim
alias v=nvim

alias ga='git add --all && git status'
alias gc='f() { git commit -m "$1" };f'
alias gp='git push origin main'
alias gs='git status'

alias matlab='prime-run ~/.scripts/matlab.sh'

